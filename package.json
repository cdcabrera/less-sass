{
  "name": "less-sass",
  "version": "0.0.1",
  "description": "Less to Sass... then back again.",
  "author": "cdcabrera",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdcabrera/less-sass"
  },
  "bugs": {
    "url": "https://github.com/cdcabrera/less-sass/issues"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "main": "src/index.js",
  "scripts": {
    "docker:run": "docker stop less-sass-test; docker run -i --rm -p 8080:8000 -v \"$(pwd)/data:/app/data\" --name less-sass-test less-sass-mock",
    "docker:build": "docker build -t less-sass-mock .",
    "parse": "node src/index.js",
    "parse:l2s": "sass2less",
    "parse:s2l": "sass2less ../data/**/*.{scss,sass} '../data/less/{name}.less'",
    "start": "nodemon --watch data npm run parse",
    "test": "eslint ./src/"
  },
  "dependencies": {
    "glob": "^7.1.3",
    "fs-extra": "^7.0.0",
    "grunt-lassie": "0.0.1",
    "lodash": "^4.17.11",
    "less-plugin-sass2less": "^1.2.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "eslint-config-esnext": "^4.0.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.7.0",
    "prettier": "^1.14.3"
  }
}
